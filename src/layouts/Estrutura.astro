---
import CarIcon from '../components/ui/Car-icon.astro'
import Dash from '../components/ui/Dash.astro'
import Logo from '../components/ui/Logo.astro'
import UserIcon from '../components/ui/User-icon.astro'
import FlagIcon from '../components/ui/Flag-icon.astro'
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Alugcar - Reserve Seu Carro Agora!</title>
	</head>
	<body class="h-screen w-full bg-Blue">
		<div class="flex h-full w-full items-center justify-center gap-24">
			<aside class="flex flex-col space-y-8">
				<Logo />
				<div class="flex flex-col items-center justify-center space-y-4">
					<a href="/" class="flex flex-col items-center justify-center text-White">
						<CarIcon />
						<span>Selecione <br /> seu carro</span>
					</a>
					<Dash />
					<a
						href="/cadastrar-credenciais"
						class="flex flex-col items-center justify-center text-White"
					>
						<UserIcon />
						<span
							>Preencha
							<br />seus dados</span
						>
					</a>
					<Dash />
					<a href="/finalizar-pedido" class="flex flex-col items-center justify-center text-White">
						<FlagIcon />
						<span>Finalize <br />a reserva</span>
					</a>
				</div>
			</aside>
			<div class="h-3/4 w-8/12 space-y-6 overflow-auto rounded-[16px] bg-WhiteLight p-14">
				<slot />
			</div>
		</div>
	</body>
</html>
